{
    "name": "browner12/larafire",
    "type": "library",
    "description": "Blackfire.io integration with Laravel",
    "keywords": [
        "browner12",
        "larafire"
    ],
    "homepage": "https://github.com/browner12/larafire",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Brown",
            "email": "browner12@gmail.com",
            "homepage": "https://brownprogramming.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "illuminate/console": "^5.3",
        "illuminate/support": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0|~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Larafire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Larafire\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
